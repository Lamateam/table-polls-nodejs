    .col-md-4.col-sm-4.col-xs-12
      canvas(doughnut='{"labels": [ "Мужчины", "Женщины" ], "datasets": [ { "data": [ 120, 50 ], "backgroundColor": [ "#455C73", "#9B59B6" ], "hoverBackgroundColor": [ "#34495E", "#B370CF" ] } ] }')
